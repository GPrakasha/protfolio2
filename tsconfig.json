{
  "compilerOptions": {
    "target": "es5",          
    "module": "commonjs",     
    "jsx": "react-jsx",       // This is necessary for React 18+ JSX syntax
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
